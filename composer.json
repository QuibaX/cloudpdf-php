{
    "name": "quibax/cloudpdf-php",
    "description": "A PHP Wrapper around the CloudPdf API",
    "keywords": [
        "QuibaX",
        "cloudpdf-php"
    ],
    "homepage": "https://github.com/quibax/cloudpdf-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Stijn Debakker",
            "email": "stijn@quibax.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^6.5|^7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "QuibaX\\CloudPdf\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "QuibaX\\CloudPdf\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
